# Database Configuration
DATABASE_URL=postgresql://campfire_user:campfire_password@localhost:5432/campfire_ads
REDIS_URL=redis://localhost:6379

# Database Connection Details (for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=campfire_ads
DB_USER=campfire_user
DB_PASSWORD=campfire_password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# External Services
POSTHOG_API_KEY=your-posthog-key
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=campfire-ads-audio
AWS_REGION=us-east-1

# Audio Processing
FFMPEG_PATH=/usr/bin/ffmpeg
AUDIO_PROCESSING_QUEUE=audio_jobs

# RTB Configuration
PREBID_SERVER_URL=http://localhost:8000
RTB_TIMEOUT_MS=150

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@campfire-ads.com

# CDN Configuration
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token